@model IEnumerable<StoreFront.Models.Player>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br />
<br />

<h2>Player Count=@Model.Count()</h2>
<table id="players" class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Team</th>
            <th scope="col">Name</th>
            <th scope="col">Position</th>



        </tr>
       
    </thead>
    <tbody>
        @foreach(StoreFront.Models.Player player in Model)
        {
        <tr>
            <td>@Html.ActionLink(player.FullName, "Details", "Players", new {PlayerID = player.PlayerID},null)</td>
            <td>@player.FullName</td>
            <td>@player.PlayerPosition</td>
        </tr>
        }

    </tbody>
    </table>

